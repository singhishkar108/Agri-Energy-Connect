@model IEnumerable<AgriEnergy.Models.Category>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center" data-aos="zoom-in">
    <br />
    <br />
    <br />
    <h1><strong>AGRI-ENERGY CONNECT</strong></h1>
    <h2>Creating a Sustainable Future</h2>
</div>

<br />
<br />
<br />

<div class="container" data-aos="fade-up">
    <div class="row">
        <!-- First Card -->
        <div class="col-md-4" data-aos="fade-up" data-aos-delay="100">
            <h2 class="text-center">Green Update</h2>
            <div class="card card-hover">
                <div id="carouselOne" class="carousel slide" data-bs-ride="carousel" data-bs-interval="2700">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="https://images.unsplash.com/photo-1471193945509-9ad0617afabf?q=80&w=1770&auto=format&fit=crop"
                                class="d-block w-100" alt="Image 1">
                        </div>
                        <div class="carousel-item">
                            <img src="https://images.unsplash.com/photo-1532601224476-15c79f2f7a51?q=80&w=1770&auto=format&fit=crop"
                                class="d-block w-100" alt="Image 2">
                        </div>
                        <div class="carousel-item">
                            <img src="https://images.unsplash.com/photo-1596733430284-f7437764b1a9?q=80&w=1770&auto=format&fit=crop"
                                class="d-block w-100" alt="Image 3">
                        </div>
                    </div>
                </div>
                <div class="card-body text-center">
                    <h5 class="card-title">Crop Varieties</h5>
                    <p class="card-text">Explore a wide range of crop varieties suitable for different climates and soil
                        types.</p>
                    <a href="https://localhost:5017/About/index" class="btn btn-primary d-block mx-auto">Explore</a>
                </div>
            </div>
        </div>

        <!-- Second Card -->
        <div class="col-md-4" data-aos="fade-up" data-aos-delay="200">
            <h2 class="text-center">Green Tech</h2>
            <div class="card card-hover">
                <div id="carouselTwo" class="carousel slide" data-bs-ride="carousel" data-bs-interval="2700">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="https://images.unsplash.com/photo-1464226184884-fa280b87c399?q=80&w=1470&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                                class="d-block w-100" alt="Image 1">
                        </div>
                        <div class="carousel-item">
                            <img src="https://images.unsplash.com/photo-1427434846691-47fc561d1179?q=80&w=1470&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                                class="d-block w-100" alt="Image 2">
                        </div>
                        <div class="carousel-item">
                            <img src="https://images.unsplash.com/photo-1605000797499-95a51c5269ae?q=80&w=1471&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                                class="d-block w-100" alt="Image 3">
                        </div>
                    </div>
                </div>
                <div class="card-body text-center">
                    <h5 class="card-title">Sustainable Tech</h5>
                    <p class="card-text">Learn about the latest in renewable energy and green farming technology.</p>
                    <a href="https://localhost:5017/About/index" class="btn btn-primary d-block mx-auto">Discover</a>
                </div>
            </div>
        </div>

        <!-- Third Card -->
        <div class="col-md-4" data-aos="fade-up" data-aos-delay="300">
            <h2 class="text-center">Agri News</h2>
            <div class="card card-hover">
                <div id="carouselThree" class="carousel slide" data-bs-ride="carousel" data-bs-interval="2700">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="https://images.unsplash.com/photo-1511117833895-4b473c0b85d6?q=80&w=1470&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                                class="d-block w-100" alt="Image 1">
                        </div>
                        <div class="carousel-item">
                            <img src="https://images.unsplash.com/photo-1588152850700-c82ecb8ba9b1?q=80&w=1470&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                                class="d-block w-100" alt="Image 2">
                        </div>
                        <div class="carousel-item">
                            <img src="https://plus.unsplash.com/premium_photo-1681965616064-07c4441b384e?q=80&w=1470&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                                class="d-block w-100" alt="Image 3">
                        </div>
                    </div>
                </div>
                <div class="card-body text-center">
                    <h5 class="card-title">Farming News</h5>
                    <p class="card-text">Stay updated with news and trends in agriculture and sustainability.</p>
                    <a href="https://localhost:5017/About/index" class="btn btn-primary d-block mx-auto">Read More</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    h1 {
        color: #024d0a;
        font-size: 80px;
        font-weight: bold;
        text-align: center;
        padding: 0 15px;
    }

    h2 {
        color: #2e6e12;
        font-size: 24px;
        text-align: center;
        margin-top: -15px;
    }

    body {
        background-image: url('https://images.rawpixel.com/image_1300/cHJpdmF0ZS9sci9pbWFnZXMvd2Vic2l0ZS8yMDIyLTA2L3YxMTYtYWdyaWN1bHR1cmUtMDJlXzEuanBn.jpg');
        background-position: center top;
        background-repeat: no-repeat;
        background-size: cover;
        background-attachment: fixed;
        margin: 0;
    }

    .btn-primary {
        background-color: #024d0a;
        width: 150px;
    }

    .btn-primary:hover {
        transform: translateY(-5px);
        background-color: #024d0a;
    }

    .card-hover {
        border: 1px solid #ddd;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .card-hover:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 12px rgba(0, 0, 0, 0.2);
    }

    .carousel-inner img {
        border-radius: 10px;
    }

    /* Responsive Styles */
    .container {
        padding: 20px;
    }

    .col-md-4 {
        margin-bottom: 30px;
    }

    .text-center {
        text-align: center;
    }
</style>

<!-- Bootstrap 5 -->
<link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">
<script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>

<!-- AOS CSS & JS -->
<link href="https://unpkg.com/aos@2.3.4/dist/aos.css" rel="stylesheet">
<script src="https://unpkg.com/aos@2.3.4/dist/aos.js"></script>
<script>
    AOS.init({
        duration: 1000,
        once: true
    });
</script>