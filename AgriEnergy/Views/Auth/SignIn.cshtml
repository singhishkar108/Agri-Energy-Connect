@model AgriEnergy.Models.AuthModel
@{
    ViewData["Title"] = "Sign In";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- AOS CSS -->
<link href="https://unpkg.com/aos@2.3.4/dist/aos.css" rel="stylesheet" />

<style>
    body {
        background-image: url('https://images.rawpixel.com/image_1300/cHJpdmF0ZS9sci9pbWFnZXMvd2Vic2l0ZS8yMDIyLTA2L3YxMTYtYWdyaWN1bHR1cmUtMDJlXzEuanBn.jpg');
        background-position: center top;
        background-repeat: no-repeat;
        background-size: cover;
        background-attachment: fixed;
        margin: 0;
        padding: 0;
        font-family: 'Arial', sans-serif;
        color: #333;
    }

    .container {
        max-width: 500px;
        margin: 50px auto;
        padding: 30px;
        background-color: rgba(255, 255, 255, 0.85);
        border-radius: 10px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
    }

    h1 {
        text-align: center;
        color: #024d0a;
        font-size: 36px;
        margin-bottom: 15px;
        font-weight: bold;
    }

    h4 {
        text-align: center;
        color: #555;
        font-size: 18px;
        margin-bottom: 25px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-group label {
        font-weight: bold;
        color: #555;
        margin-bottom: 8px;
        display: block;
    }

    .form-group input {
        width: 100%;
        padding: 12px;
        border: 1px solid #ccc;
        border-radius: 8px;
        font-size: 16px;
        box-sizing: border-box;
    }

    .form-group input:focus {
        border-color: #ff8400;
        outline: none;
        box-shadow: 0 0 5px rgba(255, 132, 0, 0.5);
    }

    .btn-primary {
        width: 100%;
        padding: 12px;
        background-color: #ff8400;
        color: #fff;
        border: none;
        border-radius: 8px;
        font-size: 18px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #FFAC00;
    }

    .a {
        text-align: center;
        display: block;
        margin-top: 20px;
        color: #007bff;
        font-size: 16px;
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .a:hover {
        color: #0056b3;
        text-decoration: underline;
    }

    .text-danger {
        font-size: 14px;
    }
</style>

<div class="container" data-aos="fade-up" data-aos-duration="1000">
    <h1 data-aos="fade-right" data-aos-duration="1200">Welcome Back Farmer!</h1>
    <h4 data-aos="fade-left" data-aos-duration="1200">Log into your account</h4>
    <form asp-action="SignIn" data-aos="zoom-in" data-aos-duration="1400">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group" data-aos="fade-up" data-aos-duration="1000" data-aos-delay="100">
            <label asp-for="Email" class="control-label">Email</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group" data-aos="fade-up" data-aos-duration="1000" data-aos-delay="200">
            <label asp-for="Password" class="control-label">Password</label>
            <input asp-for="Password" class="form-control" type="password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group" data-aos="fade-up" data-aos-duration="1000" data-aos-delay="300">
            <input type="submit" value="Log in" class="btn btn-primary" />
        </div>
    </form>
</div>

<!-- AOS JS -->
<script src="https://unpkg.com/aos@2.3.4/dist/aos.js"></script>
<script>
    AOS.init({
        duration: 1000,
        once: true
    });
</script>
