@model AgriEnergy.Models.Product

@{
    ViewData["Title"] = "Create Product";
}

<div class="container mt-5" data-aos="fade-down">
    <h1 class="display-5 fw-bold text-success text-center">Create New Product</h1>
    <p class="text-muted text-center mb-4">Fill in the form to add a new product to the system.</p>
</div>

<div class="container" data-aos="fade-up">
    <div class="row justify-content-center">
        <div class="col-md-8 shadow-sm p-5 rounded bg-light">
            <h4 class="text-primary mb-4">Product Information</h4>
            <hr />
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="ProductName" class="form-label"></label>
                    <input asp-for="ProductName" class="form-control" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ProductDescription" class="form-label"></label>
                    <input asp-for="ProductDescription" class="form-control" />
                    <span asp-validation-for="ProductDescription" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ImageUrl" class="form-label"></label>
                    <input asp-for="ImageUrl" class="form-control" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Price" class="form-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Quantity" class="form-label"></label>
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>

                <!-- Drop-down for Availability -->
                <div class="form-group">
                    <label asp-for="Availability" class="control-label"></label>
                    <select asp-for="Availability" class="form-control">
                        <option value="">-- Select Availability --</option>
                        <option value="YES">YES</option>
                        <option value="NO">NO</option>
                    </select>
                    <span asp-validation-for="Availability" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ProductionDate" class="form-label"></label>
                    <input asp-for="ProductionDate" class="form-control" type="date" />
                    <span asp-validation-for="ProductionDate" class="text-danger"></span>
                </div>

                @* <div class="mb-3">
                    <label asp-for="FarmerId" class="form-label"></label>
                    <select asp-for="FarmerId" class="form-select" asp-items="ViewBag.FarmerId"></select>
                </div> *@

                <div class="mb-4">
                    <label asp-for="CategoryId" class="form-label"></label>
                    <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId"></select>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">← Back to List</a>
                    <input type="submit" value="Create" class="btn btn-success px-4" />
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Styling -->

<style>
    body {
        background-image: url('https://images.rawpixel.com/image_1300/cHJpdmF0ZS9sci9pbWFnZXMvd2Vic2l0ZS8yMDIyLTA2L3YxMTYtYWdyaWN1bHR1cmUtMDJlXzEuanBn.jpg');
        background-position: center top;
        background-repeat: no-repeat;
        background-size: cover;
        background-attachment: fixed;
        margin: 0;
    }

    .form-label {
        font-weight: 600;
    }

    .btn {
        border-radius: 8px;
    }

    .form-control,
    .form-select {
        border-radius: 6px;
        box-shadow: none;
        transition: box-shadow 0.2s;
    }

    .form-control:focus,
    .form-select:focus {
        box-shadow: 0 0 5px rgba(0, 128, 0, 0.3);
        border-color: #198754;
    }
</style>

<!-- Bootstrap 5 -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<!-- AOS Animation -->
<link href="https://unpkg.com/aos@2.3.4/dist/aos.css" rel="stylesheet" />
<script src="https://unpkg.com/aos@2.3.4/dist/aos.js"></script>
<script>
    AOS.init({
        duration: 800,
        once: true
    });
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
