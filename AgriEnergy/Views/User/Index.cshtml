@model IEnumerable<AgriEnergy.Models.User>

@{
    ViewData["Title"] = "Our Farmers"; // Ensure title matches content
}

<!-- Bootstrap 5 -->
<link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">
<script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>

<!-- AOS CSS & JS -->
<link href="https://unpkg.com/aos@2.3.4/dist/aos.css" rel="stylesheet">
<script src="https://unpkg.com/aos@2.3.4/dist/aos.js"></script>
<script>
    AOS.init({
        duration: 1000,
        once: true
    });
</script>

<style>
    body {
        background-image: url('https://images.rawpixel.com/image_1300/cHJpdmF0ZS9sci9pbWFnZXMvd2Vic2l0ZS8yMDIyLTA2L3YxMTYtYWdyaWN1bHR1cmUtMDJlXzEuanBn.jpg');
        background-position: center top;
        background-repeat: no-repeat;
        background-size: cover;
        background-attachment: fixed;
    }

    h1 {
        color: #024d0a;
        font-size: 60px;
        font-weight: bold;
        margin-top: 60px;
    }

    h5 {
        color: #03470b;
        margin-bottom: 40px;
    }

    a {
        color: darkgreen;
        font-size: 20px;
        text-decoration: none;
    }

    a:hover {
        text-decoration: underline;
        color: #016a1c;
    }

    .table {
        background-color: rgba(255, 255, 255, 0.9);
        border-radius: 12px;
        overflow: hidden;
    }

    .container-custom {
        background-color: rgba(255, 255, 255, 0.85);
        padding: 40px;
        border-radius: 16px;
        margin-top: 30px;
    }

    .btn-primary {
        background-color: #024d0a;
        width: 150px;
    }

    .btn-primary:hover {
        transform: translateY(-3px);
        background-color: #026d0f;
    }

    .logout-button {
        position: fixed;
        top: 80px;
        right: 30px;
        z-index: 1050;
        padding: 8px 16px;
        font-size: 16px;
    }
</style>

<div class="container container-custom" data-aos="fade-up">
    <h1>Our Farmers</h1>
    <h5>Click on a farmer's name to view their products</h5>

    <table class="table table-striped mt-4">
        <thead>
            <tr>
                <th>Quality Farmers</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var farmer in Model)
            {
                <tr>
                    <td>
                        <a asp-action="FarmerDetails" asp-controller="Product" asp-route-id="@farmer.UserId">
                            @farmer.Name
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
