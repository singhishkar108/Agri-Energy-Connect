@{
    ViewData["Title"] = "Add a Farmer";
}

<!-- Bootstrap 5 -->
<link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">
<script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>

<!-- AOS Animation -->
<link href="https://unpkg.com/aos@2.3.4/dist/aos.css" rel="stylesheet">
<script src="https://unpkg.com/aos@2.3.4/dist/aos.js"></script>
<script>
    AOS.init({ duration: 1000, once: true });
</script>

<style>
    body {
        background-image: url('https://images.rawpixel.com/image_1300/cHJpdmF0ZS9sci9pbWFnZXMvd2Vic2l0ZS8yMDIyLTA2L3YxMTYtYWdyaWN1bHR1cmUtMDJlXzEuanBn.jpg');
        background-position: center top;
        background-repeat: no-repeat;
        background-size: cover;
        background-attachment: fixed;
    }

    h1 {
        text-align: center;
        color: darkgreen;
        font-weight: bold;
        font-size: 48px;
        margin-top: 50px;
    }

    .form-container {
        max-width: 500px;
        margin: 30px auto;
        padding: 30px;
        background-color: rgba(255, 255, 255, 0.95);
        border-radius: 12px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.15);
    }

    label {
        font-weight: 600;
    }

    .btn-custom {
        background-color: yellowgreen;
        color: white;
    }

    .btn-custom:hover {
        background-color: #5aaf00;
        color: white;
    }

    .link-container {
        text-align: center;
        margin-top: 20px;
    }

    .link-container a {
        color: darkgreen;
        font-weight: 500;
        text-decoration: none;
    }

    .link-container a:hover {
        text-decoration: underline;
    }
</style>

<div class="container">
    <h1 data-aos="fade-down">Add a Farmer</h1>

    <div class="form-container" data-aos="fade-up">
        <form asp-action="InviteFarmer" method="post">
            <div class="mb-3">
                <label for="to" class="form-label">Recipient Email</label>
                <input type="email" class="form-control" id="to" name="email" placeholder="Enter farmer's email"
                    required />
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-custom">Send Invite</button>
            </div>
        </form>

        <div class="link-container mt-4">
            <a href="@Url.Action("UserList", "User")">Change System User Roles</a>
        </div>
    </div>
</div>
