<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=0.7" />
    <title>@ViewData["Title"] - AgriEnergy</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/mycsstheme.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AgriEnergy.styles.css" asp-append-version="true" />
    <style>
        .navbar-custom {
            background-color: #024d0a;
            padding: 10px 20px;
        }

        .navbar-custom .nav-link {
            color: white;
            font-size: 18px;
            margin-right: 15px;
        }

        .navbar-custom .nav-link:hover {
            color: #ff8400;
        }

        .navbar-brand img {
            height: 60px;
        }

        .user-icon {
            color: white;
            font-size: 24px;
        }

        .content {
            margin-top: 90px;
            /* space below navbar */
            padding: 20px;
        }
    </style>
</head>

<body>

    <!-- Top Navbar -->
    <nav class="navbar navbar-expand-lg navbar-custom fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                @* <img src="logoaec.png" alt="AgriEnergy-Connect" /> *@
                <img src="@Url.Content("~/images/logoaec.png")" alt="AgriEnergy-Connect" />

            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                            <i class="fas fa-home"></i> Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="About" asp-action="Index">
                            <i class="fas fa-info-circle"></i> About Us
                        </a>
                    </li>

                    @{
                        var userRole = Context.Session.GetString("Role");
                        if (userRole != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Category" asp-action="Index">
                                    <i class="fas fa-th"></i> Categories
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Product" asp-action="Index">
                                    <i class="fas fa-box-open"></i> Market
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="User" asp-action="Index">
                                    <i class="fas fa-users"></i> Our Suppliers
                                </a>
                            </li>
                        }

                        if (userRole != null && userRole.Equals("EMPLOYEE"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="Index">
                                    <i class="fa-solid fa-hat-cowboy"></i> Add Farmer
                                </a>
                            </li>
                        }
                    }

                    <!-- Conditional Logout or Sign-in Link -->
                    @if (userRole != null)
                    {
                        <li class="nav-item">
                            <form asp-action="LogOut" asp-controller="Auth" method="post" style="display:inline;">
                                <button type="submit" class="nav-link btn btn-danger"
                                    style="padding: 8px 15px; color: white; border: none; background-color: #dc3545;">
                                    Log Out
                                </button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link user-icon" asp-area="" asp-controller="Auth" asp-action="signin">
                                <i class="far fa-circle-user fa-2x"></i>
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Page Content -->
    <div class="content">
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
